<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".EditFragment">


    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/button6"
        android:layout_width="97dp"
        android:layout_height="31dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/select_btn_click"
        android:text="上傳照片"
        android:textColor="#EFCA84"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="97dp"
        android:layout_height="31dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/select_btn_click"
        android:text="更新資料"
        android:textColor="#EFCA84"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="28dp"
        app:civ_border_color="#EFCA84"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6">

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#707070"
            android:textSize="14sp"
            android:theme="@style/editTextstyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#707070"

            android:textSize="14sp"
            android:theme="@style/editTextstyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText4" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#707070"
            android:textSize="14sp"
            android:theme="@style/editTextstyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText6" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#707070"
            android:textSize="14sp"
            android:theme="@style/editTextstyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText7" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#707070"
            android:textSize="14sp"
            android:theme="@style/editTextstyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText8" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#707070"
            android:textSize="14sp"

            android:theme="@style/editTextstyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText9" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="姓名:"
            android:textAlignment="viewEnd"
            android:textColor="#EFCA84"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/editText4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:singleLine="true"
            android:text="手機:"
            android:textAlignment="textEnd"
            android:textColor="#EFCA84"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/editText6"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:singleLine="true"
            android:text="身高:"
            android:textAlignment="textEnd"
            android:textColor="#EFCA84"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/editText7"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="體重:"
            android:textAlignment="textEnd"
            android:textColor="#EFCA84"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/editText8"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="居住地:"
            android:textAlignment="textEnd"
            android:textColor="#EFCA84"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/editText9"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="緊急電話:"
            android:textAlignment="textEnd"
            android:textColor="#EFCA84"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/editText10"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>